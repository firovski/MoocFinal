{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Quiz list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quiz nom</th>
                <th>Quiz description</th>
                <th>Date ajout</th>
                <th>Intro</th>
                <th>Type</th>
                <th>Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('quiz_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.quiznom }}</td>
                <td>{{ entity.quizdescription }}</td>
                <td>{% if entity.dateajout %}{{ entity.dateajout|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.intro }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.time }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('quiz_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('quiz_edit', { 'id': entity.id }) }}">edit</a>
                    </li><li>
                        <a href="{{ path('question', { 'id': entity.id }) }}">Question</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('quiz_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
